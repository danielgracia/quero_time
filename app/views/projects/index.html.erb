<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1>Projetos</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'Criar Projeto', new_project_path, class: "btn btn-primary" %>
    <div class="table-responsive">
      <table class="table table-houver">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Descricao</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.title %></td>
              <td><%= project.description %></td>
              <td><%= link_to 'Visualizar', project %></td>
              <td><%= link_to 'Editar', edit_project_path(project) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
