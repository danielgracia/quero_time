<%= form_with(model: team_requirement, local: true) do |form| %>
  <% if team_requirement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team_requirement.errors.count, "error") %> prohibited this team_requirement from being saved:</h2>

      <ul>
      <% team_requirement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field(:team_id, value: @current_user.teams.first.id) %>
  </div>

  <div class="col-lg-12">
    <div class="col-lg-4">
      <%= form.label :skill_id %>
      <%= form.select :skill_id, Skill.all.map{ |c| [c.name, c.id]}, {}, class: "form-control"  %>
    </div>

    <div class="col-lg-8">
      <%= form.label :skill_level_id %>
      <%= form.select :skill_level_id, SkillLevel.all.map{ |c| [c.name, c.id]}, {}, class: "form-control"  %>
    </div>

  </div>
  <div class="">
    <%= form.label :count %>
    <%= form.select :count, ((0..4).map {|i| ["#{i}",i] }) %>
  </div>

  <div class="actions">
    <%= form.submit "Atualizar", class: "btn btn-default" %>
  </div>
<% end %>
