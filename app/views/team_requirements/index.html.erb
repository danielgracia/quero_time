<p id="notice"><%= notice %></p>

<h1>Team Requirements</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Skill</th>
      <th>Skill level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_requirements.each do |team_requirement| %>
      <tr>
        <td><%= team_requirement.skill.name %></td>
        <td><%= team_requirement.skill_level.name %></td>
        <td><%= link_to 'Show', team_requirement %></td>
        <td><%= link_to 'Edit', edit_team_requirement_path(team_requirement) %></td>
        <td><%= link_to 'Destroy', team_requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

