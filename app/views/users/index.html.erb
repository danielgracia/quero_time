<div class="row">
  <div class="col-lg-12">
    <h1>Usuarios</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-houver">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Visualizar', user %></td>
              <td><%= link_to 'Convidar', invite_user_path(user) unless user.id == current_user.id || current_user.teams.blank? %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
