<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1>Informações de <%= @user.name %></h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <h2>Habilidades</h2>

    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Level</th>
            <th>Skill</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @user.user_skills.each do |us_skill| %>
            <tr>
              <td><%= us_skill.skill_level.name %></td>
              <td><%= us_skill.skill.name %></td>
              <td><%= link_to 'Editar', edit_user_skill_path(us_skill), class: "btn btn-default" %></td>
              <td><%= link_to 'Remover', us_skill, method: :delete, data: { confirm: 'Voce tem certeza?' }, class: "btn btn-default" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @current_user.id == @user.id %>
      <%= render 'user_skills/form', {user_skill: @user_skill}%>
    <% end %>

    <%= link_to 'Adicionar habilidade', new_user_skill_path, class: "btn btn-default" %>
    <%= link_to 'Editar habilidades', user_skills_path, class: "btn btn-default" %>
    <%= link_to 'Voltar', users_path, class: "btn btn-default" %>
  </div>
</div>
