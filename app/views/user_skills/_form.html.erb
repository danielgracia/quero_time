<%= form_with(model: user_skill, local: true) do |form| %>
  <% if user_skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_skill.errors.count, "error") %> prohibited this user_skill from being saved:</h2>

      <ul>
      <% user_skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field(:user_id, value: @current_user.id) %>
  </div>


  <div class="col-lg-4">
    <%= form.label :skill_id %>
    <%= form.select :skill_id, Skill.all.map{ |c| [c.name, c.id]}, {}, class: "form-control"  %>
  </div>

  <div class="col-lg-8">
    <%= form.label :skill_level_id %>
    <%= form.select :skill_level_id, SkillLevel.all.map{ |c| [c.name, c.id]}, {}, class: "form-control"  %>
  </div>

  <div>
    <%= form.submit "Atualizar Habilidade", class: "btn btn-primary" %>
  </div>

<% end %>
