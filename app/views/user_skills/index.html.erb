<h1>Minhas habilidades</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Level</th>
      <th>Skill</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>

    <% @user_skills.where( user_id: current_user ).each do |user_skill| %>
      <tr>
        <td><%= user_skill.skill_level.name %></td>
        <td><%= user_skill.skill.name %></td>
        <td><%= link_to 'Editar', edit_user_skill_path(user_skill), class: "btn btn-default" %></td>
        <td><%= link_to 'Remover', user_skill, method: :delete, data: { confirm: 'Voce tem certeza?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova', new_user_skill_path, class: "btn btn-default" %>
