<!DOCTYPE html>
<html>
  <head>
    <title>QueroTime</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">

      <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">

        <div class="navbar-header">
          <a class="navbar-brand" href="index.html">Quero Time</a>
        </div>
        <div class="navbar-default sidebar" role="navigation">
          <div class="sidebar-nav navbar-collapse">
            <ul class="nav in" id="side-menu">

              <li>
                  <a href="/teams" class="active"><i class="fa fa-users fa-fw"></i> Equipe</a>
              </li>

              <li>
                  <a href="/users" class="active"><i class="fa fa-user fa-fw"></i> Usu√°rios</a>
              </li>

              <li>
                  <a href="/projects" class="active"><i class="fa fa-lightbulb-o fa-fw"></i> Projetos</a>
              </li>

              <li>
                  <a href="/invitations" class="active"><i class="fa fa-bell-o fa-fw"></i> Convites</a>
              </li>

              <li>
                <%= link_to current_user, class: "active" do %>
                <i class="fa fa-id-card-o fa-fw"></i> Perfil
                <% end %>
              </li>

            </ul>
          </div>
        </div>

      </div>

      <div id="page-wrapper" style="min-height: 494px;">
        <div class="container">
          <% if notice.present? %>
            <div class="row">
              <div class="col-lg-12">
                <div class="alert alert-info top-notice">
                  <%= notice %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </body>
</html>
