<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= skill.description %></td>
        <td><%= link_to 'Exibir', skill, class: "btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_skill_path(skill), class: "btn btn-default" %></td>
        <td><%= link_to 'Remover', skill, method: :delete, data: { confirm: 'Voce tem certeza?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path, class: "btn btn-default" %>
