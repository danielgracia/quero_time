<h1>Convites</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>State</th>
      <th>Usu√°rios</th>
      <th>Equipes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.where(user_id: current_user).each do |invitation| %>
      <tr>
        <td><%= invitation.state %></td>
        <td><%= invitation.user.name %></td>
        <td><%= invitation.team.name %></td>
        <td><%= link_to 'Exibir', invitation, class: "btn btn-default" %></td>
        <td><%= link_to 'Aceitar', accept_invitation_path(invitation), method: :post, class: "btn btn-default" %></td>
        <td><%= link_to 'Remover', invitation, method: :delete, data: { confirm: 'Voce tem certeza?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

