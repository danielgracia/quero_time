<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-lg-12">
    <h1>Informações da equipe <%= @team.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <p>
      <strong>Informações:</strong>
      <%= @team.information %>
    </p>

    <p>
      <strong>Líder:</strong>
      <%= @team.leader.name %>
    </p>

    <% if @team.project.present? %>
      <p>
        <strong>Projeto:</strong>
        <%= @team.project.title %>
      </p>

      <p>
        <strong>Descrição do projeto:</strong>
        <%= @team.project.description %>
      </p>
    <% else %>
      <p>
        Esta equipe não possui projeto associado ainda.
      </p>
      <% if @current_user.teams.present? && @current_user.teams.first.id == @team.id %>
        <%= link_to 'Criar Projeto', new_project_path(team_id: @team), class: "btn btn-primary" %>
      <% end %>
    <% end %>

    <h2>Habilidades desejadas</h2>

    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Level</th>
            <th>Skill</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @team.team_requirements.each do |te_requirement| %>
            <tr>
              <td><%= te_requirement.skill_level.name %></td>
              <td><%= te_requirement.skill.name %></td>
              <td><%= link_to 'Editar', edit_team_requirement_path(te_requirement), class: "btn btn-default" %></td>
              <td><%= link_to 'Remover', te_requirement, method: :delete, data: { confirm: 'Voce tem certeza?' }, class: "btn btn-default" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @current_user.teams.present? && @current_user.teams.first.id == @team.id %>
      <%= render 'team_requirements/form', {team_requirement: @team_requirement}%>
    <% end %>


    <%= link_to 'Editar', edit_team_path(@team), class: "btn btn-primary" %>
    <%= link_to 'Voltar', teams_path, class: "btn btn-default" %>

  </div>
</div>
