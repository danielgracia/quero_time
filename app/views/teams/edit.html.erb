<div class="row">
  <div class="col-lg-12">
    <h1>Atualizar Informações da Equipe</h1>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <%= render 'form', team: @team %>

    <%= link_to 'Visualizar', @team, class: "btn btn-default" %>
    <%= link_to 'Voltar', teams_path, class: "btn btn-default" %>
    <%= link_to 'Sair do time', team_give_up_path(current_user), class: "btn btn-default", method: :post, :data => {:confirm => "Tem certeza que deseja sair deste time?"} %>
  </div>
</div>
