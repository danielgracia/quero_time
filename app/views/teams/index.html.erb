<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1>Equipes</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to 'Criar Equipe', new_team_path, class: "btn btn-primary" %>
    <div class="table-responsive">
      <table class="table table-houver">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Informações</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td><%= team.name %></td>
              <td><%= team.information %></td>
              <td><%= link_to 'Visualizar', team, class: "btn btn-default" %></td>
              <td><%= link_to 'Editar', edit_team_path(team), class: "btn btn-default" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
